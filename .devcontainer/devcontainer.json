// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/go-postgres
{
	"name": "Go & Common Tools - talk2robots",

	// Use either 'build' or 'image' as needed
	// "build": { "dockerfile": "Dockerfile", "context": "." },
	"image": "mcr.microsoft.com/devcontainers/go",

	// Common features for Go development and general utilities
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {},
		"ghcr.io/devcontainers/features/sshd:1": { "version": "latest" },
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/devcontainers/features/common-utils:2": {},
		"ghcr.io/devcontainers/features/terraform:1": {},
		"ghcr.io/devcontainers-extra/features/digitalocean-cli:1": {},
		"ghcr.io/rio/features/kustomize:1": {}
	},

	// Reasonable defaults, can be overridden per project
	"hostRequirements": {
		"cpus": 8,
		"memory": "16gb",
		"storage": "64gb"
	},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [8080, 3306, 6379, 80],
	"portsAttributes": {
		"80": {
			"label": "nginx",
			"protocol": "http"
		},
		"8080": {
			"label": "backend",
			"protocol": "http"
		}
	},

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"golang.Go",
				"github.copilot",
				"GitHub.codespaces",
				"GitHub.copilot-chat"
			],
			"settings": {
				"files.insertFinalNewline": true,
				"files.trimFinalNewlines": true,
				"files.trimTrailingWhitespace": true,
				"files.watcherExclude": {
					"**/.git": true,
					"**/tmp": true,
					"**/node_modules": true
				}
			}
		}
	},

	// Set the default user (change as needed)
	"remoteUser": "vscode",

	"onCreateCommand": ".devcontainer/on-create-command.sh",
	"updateContentCommand": ".devcontainer/update-content-command.sh",
	"postAttachCommand": ".devcontainer/post-attach-command.sh"
}
